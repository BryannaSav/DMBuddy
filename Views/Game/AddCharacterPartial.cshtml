@model DMBuddy.Models.CharacterViewModel

<form action="/AddCharacter" method="Post">
    <label asp-for="Name"></label>
    <input asp-for="Name">
    <span class="error" asp-validation-for="Name"></span><br>

    <label asp-for="Initiative"></label>
    <input asp-for="Initiative">
    <span class="error" asp-validation-for="Initiative"></span><br>

    <label asp-for="HP"></label>
    <input asp-for="HP">
    <span class="error" asp-validation-for="HP"></span><br>

    <label asp-for="AC"></label>
    <input asp-for="AC">
    <span class="error" asp-validation-for="AC"></span><br>

    <label asp-for="PassivePerception"></label>
    <input asp-for="PassivePerception">
    <span class="error" asp-validation-for="PassivePerception"></span><br>

    <input type="hidden" name="CombatId" value=@ViewBag.Id>

    <input type="submit" value="Create">
</form>